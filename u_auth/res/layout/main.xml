<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Login Screen "
    />
<EditText android:text="uname" android:id="@+id/EditText01" android:layout_width="150dip" android:layout_height="wrap_content"></EditText>
<EditText android:text="pwd" android:inputType="textPassword" android:id="@+id/EditText02" android:layout_width="150dip" android:layout_height="wrap_content"></EditText>
<Button android:text="Login !" android:id="@+id/Button01" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
